<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="controller.MainActivity"
    android:background="@drawable/background_1">


    <TextView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="15dp"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginBottom="25dp"
        android:text="Bienvenu dans TopQuiz!"
        android:textStyle="bold"> </TextView>

    <EditText
        android:id="@+id/activity_main_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25sp"
        android:maxLength="10"
        android:maxLines="1"
        android:hint="Entrez votre prÃ©nom:" />

    <Button
        android:id="@+id/activity_main_play_btn"
        android:layout_width="136dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_margin="40dp"
        android:text="JOUER"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/activity_main_ladderbord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Classement"
        />

</LinearLayout>
